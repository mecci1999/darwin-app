{
  "compilerOptions": {
    "target": "es6",
    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "noUnusedLocals": false,
    "removeComments": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "lib": ["esnext"],
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"],
      "@utils": ["./src/utils/*"]
    }
  },
  "include": ["./src/**/*.ts", "./*.d.ts", "./src/**/*.d.ts"],
  "typeRoots": ["src/typings"],
  "exclude": ["node_modules", "build", "dist"]
}
